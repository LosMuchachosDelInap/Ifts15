# =====================================
# CONFIGURACIÓN DEL PROYECTO IFTS15 - TEMPLATE
# =====================================
# Copiar este archivo como .env y configurar con valores reales

# URL Base del proyecto
BASE_URL=http://localhost:8000

# Configuración de Base de Datos
DB_HOST=localhost
DB_USERNAME=root
DB_PASSWORD=
DB_NAME=ifts15
DB_PORT=3306
DB_CHARSET=utf8mb4

# Configuración de la aplicación
DEBUG_MODE=true
SESSION_TIMEOUT=3600
ENVIRONMENT=development

# Información del sitio
SITE_NAME="IFTS15 - Instituto de Formación Técnica Superior N° 15"
SITE_DESCRIPTION="Instituto de Formación Técnica Superior N° 15"
CARD_DESCRIPTION="Formación técnica superior de calidad para el desarrollo profesional y personal."

# Configuración de email (PHPMailer)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_password_de_aplicacion
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@ifts15.edu.ar
MAIL_FROM_NAME="IFTS15"

# Configuración de seguridad
CSRF_PROTECTION=true
PASSWORD_MIN_LENGTH=6
SESSION_SECURE_COOKIE=false
SESSION_HTTPONLY_COOKIE=true